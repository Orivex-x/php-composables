{
  "name": "orivex-x/php-composables",
  "description": "A modular, reactive, versioned PHP workflow framework",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "George Small"
    }
  ],
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  },
  "require": {
    "php": ">=8.2"
  },
  "autoload": {
    "psr-4": {
      "PhpComposables\\": "src/"
    }
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml",
    "mutation": "vendor/bin/infection"
  },
  "autoload-dev": {
    "psr-4": {
      "PhpComposables\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10",
    "phpstan/phpstan": "^2.1",
    "infection/infection": "^0.31"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
